{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": [
      "es2019",
      "dom"
    ],
    "jsx": "react",
    "declaration": false, // TODO: sort out how to include type declarations
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@teleport/*": [
        "packages/*/src"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "packages/*/cjs",
    "packages/*/esm",
    "packages/*/dist"
  ]
}
