{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "debugLevel": false,
    "ecmaFeatures": {
      "jsx": true
    },
    "project": [
      "./packages/**/tsconfig.json",
      "./demo/tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks"
  ],
  "extends": [
    "standard-with-typescript",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "react/jsx-uses-vars": 1
  }
}
